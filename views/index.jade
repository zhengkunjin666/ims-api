extends layout

block content
  h1= title
  p Welcome to #{title}

  <!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <div class="button" id="button">提交</div>
    <script>
        const PAGE={
            init: function(){
                this.bind();
            },
            bind: function(){
                let button=document.getElementById('button');
                button.addEventListener('click',this.handlerInsert);
            },
            handlerInsert: async function(event){
                let InsertFetch=await fetch('http://localhost:3000/api/admins',{
                    method: 'POST',
                    body: JSON.stringify({
                        name: "王五",
                        phone: 1253565555,
                        password: 123456,
                    }),
                    headers:{
                        'content-type': 'application/json'
                    },
                    // mode: 'no-cors'
                }).then(response => response.json())
                if(InsertFetch.code===200){
                    alert("添加成功！");
                    console.log(InsertFetch.data)
                }else{
                    alert("添加失败！");
                    console.log(InsertFetch.data)
                }
            }
        };
        PAGE.init();
    </script>
</body>
</html>
